# GitHub Token
GITHUB_TOKEN=ghp_your_github_token_here
GITHUB_WEBHOOK_SECRET=your_webhook_secret_optional

# LLM Configuration (Kimi via opencode.ai)
LLM_API_KEY=your_opencode_api_key_here
LLM_BASE_URL=https://api.opencode.ai/v1
